<div class="col-md-12">

    {{#if messages.error}}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="alert-heading">Failed</h4>
            <p>{{messages.error}}</p>
        </div>
    {{/if}}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">{{judul}}</h3>
            <span class="pull-right"><a href="/roles/create" class="btn btn-info"><i class="fa fa-plus"></i> </a></span>
        </div>
        <!-- /.box-header -->
        <!-- form start -->

        <div class="box-body">
            <table id="table-roles" class="table table-condensed table-bordered table-hover" width="100%">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Deskription</th>
                    <th>Name</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                    <th colspan="2">Action</th>

                </tr>
                </thead>
                <tbody>

                </tbody>


            </table>
        </div>
    </div>

</div>
{{#section 'script'}}

    <script type="application/javascript">
        $(document).ready(function () {
            var t = $('#table-roles').DataTable({
                responsive: true,
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/roles/list"
                },
                columns: [
                    {data: "id", name: "id",bVisible:false},
                    {data: "description", name: "description"},
                    {data: "name", name: 'name'},
                    {data: "created_at", name: 'created_at'},
                    {data: "updated_at", name: 'updated_at'}

                ],
                "rowCallback": function (row, data, index) {
                    console.log(data.id);
                    var newBtns =  '<td align="center"><a href="/roles/update/'+ data.id + '"><i class="fa fa-edit"></i> </a> ' +
                                    '</td><td align="center"><a href="/roles/delete/'+data.id+'?_method=DELETE"><i class="fa fa-eraser"></i></a></td>';
                    $(row).append(newBtns);
                }
            })
        });

    </script>

{{/section}}

